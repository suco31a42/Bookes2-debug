<div class="d-inline-flex flex-column">
  <% book.book_comments.each do |book_comment| %>
    <div class="d-flex">
      <div class="mb-3">
        <%= link_to(book_comment.user) do %>
          <%= image_tag book_comment.user.get_profile_image(50, 50) %><br>
          <%= book_comment.user.name %>
        <% end %>
      </div>
      <div class="ml-3">
        <%= book_comment.created_at.strftime('%Y/%m/%d') %>
        <%= book_comment.comment %>
        <% if book_comment.user.id == current_user.id %>
          <%= link_to 'Destroy', book_book_comment_path(book_comment.book, book_comment), method: :delete, remote: true, data: { confirm: '本当に消しますか？' }, date: {"turbolinks" => false}, class: "btn btn-sm btn-danger"%>
        <% end %>
      </div>
    </div>
  <% end %>
</div>