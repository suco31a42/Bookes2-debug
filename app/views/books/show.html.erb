<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <%= render 'layouts/errors', obj: @booknew %>
      <h2>User info</h2>
      <%= render 'users/info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @booknew %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image(100, 100) %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td id="favorite-btn-<%= @book.id %>">
            <%= render 'favorites/btn', book: @book %>
          </td>
          <td>コメント件数：<span id="comment-count"><%= @book.book_comments.count %></span></td>
          <% if @user.id == current_user.id %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      </table>
      <div id="comment-index">
        <%= render 'book_comments/comment_index', book: @book %> <br>
      </div>
      <div id="new-comment">
        <%= render 'book_comments/new_comment', book: @book, comment: @comment %>
      </div>
    </div>
  </div>
</div>