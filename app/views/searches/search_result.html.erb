<div class="container">
  <div class="row">
    <div class="col">
      <h2> search for"<%= @word %>"</h2>
        <table class="table table-hover table-inverse">
          <% if @range == "User" %>
          <thead>
            <tr>
              <th>Image</th>
              <th>Name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody class="small">
            <% @users.each do |user| %>
              <tr>
                <td><%= image_tag user.get_profile_image(50,50) %></td>
                <td><%= user.name %></td>
                <td>フォロー数：<%= user.followings.count %></td>
                <td>フォロワー数：<%= user.followers.count %></td>
                <td><%= link_to 'Show', user %></td>
              </tr>
            <% end %>
          </tbody>
      <% else %>
          <thead>
            <tr>
              <th>UserImage</th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(50,50) %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td>コメント件数：<%= book.book_comments.count %></td>
            </tr>
            <% end %>
          </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>